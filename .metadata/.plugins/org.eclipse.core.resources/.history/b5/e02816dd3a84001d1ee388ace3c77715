#include "software_timer.h"

int timerRequest_counter = 0;
int timerCol_flag = 0;

void setTimerCol(int duration){
	timerCol_counter = duration/TICK;
	timerCol_flag = 0;
}

void timerRun(){
	if(timerCol_counter > 0){
			timerCol_counter--;
			if(timerCol_counter == 0){
				timerCol_flag = 1;
			}
		}
}
